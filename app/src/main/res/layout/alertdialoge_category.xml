<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FA9E9E"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/cataddimageid"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@drawable/upload_a_photo"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/productlinear"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/cataddfromgallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginEnd="20dp"
            android:text="@string/from_gallery"
            />

        <TextView
            android:id="@+id/cataddfromcamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            android:text="@string/from_camera" />

    </LinearLayout>

    <EditText
        android:id="@+id/edittextcatname"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:hint="@string/enter_category_name" />

</LinearLayout>